@model PSBlog.ViewModels.LoginModel

@{
    ViewBag.Title = "Login";
}
@Styles.Render("~/Content/LoginStyle.css")


@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)
    
    <h2 class="form-signin-heading">Login in</h2>
    @Html.TextBoxFor(model => model.User.UserName, new { @class = "form-control", placeholder = "User name" })
    @Html.PasswordFor(model => model.User.Password, new { @class = "form-control", placeholder = "Password" })
       
    <label class="checkbox">        
        @Html.CheckBoxFor(model => model.RememberMe) Remember me
    </label>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>


}


<p class="form-signin">
    <a href="@Url.Action("Register","User")">Register new user</a>
</p>

@section scripts{
    <script>
        $(function () {
            $("#nav-log-in").addClass('active');
        });
    </script>
}