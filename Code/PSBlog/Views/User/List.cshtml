@model IEnumerable<PSBlog.Models.User>
@using PSBlog.Properties
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @if (Roles.IsUserInRole(item.UserName, "admin"))
                { 
                    @Html.ActionLink("Take away admin role", "TakeAwayAdminRole", new { id = item.Id }) 
                }
                else
                {
                    @Html.ActionLink("Grant admin role", "GrantAdminRole", new { id = item.Id })
                }
                |

                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
